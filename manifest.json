{
    "manifest_version": 3,
    "name": "Reading time and note taker",
    "version": "1.0",
    "description": "Add the reading time and notes to substack posts",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Click to open Panel"
    },
    "permissions": ["sidePanel", "activeTab", "scripting"],
    "content-scripts": [
        {
            "matches": ["<all-urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}
